# Flask Application Configuration
FLASK_SECRET_KEY=super_secret_key_here  # Replace with a secure random string
FLASK_DEBUG=true                       # true for development, false for production
ENVIRONMENT=development                # Use 'production' for production deployments

# Twilio Configuration (SMS and Voice Alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890        # Your Twilio phone number

# Email Configuration
EMAIL_USER=your_email@example.com      # Email address for sending alerts
EMAIL_PASSWORD=your_email_password     # Password for the email account

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=your_firebase_server_key

# Database Configuration
DB_HOST=localhost                      # Database host
DB_PORT=5432                           # Database port
DB_NAME=pisafe_db                      # Database name
DB_USER=db_user                        # Database username
DB_PASSWORD=db_password                # Database password

# SSL Certificates (Development Only)
SSL_CERT_PATH=certs/server.crt
SSL_KEY_PATH=certs/server.key
